@model IEnumerable<UserViewModel>

<table>
    <thead>
        <tr>
            <th>
                ФИО
            </th>
            <th>
                Почта
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model)
        {
            <tr>
                <td>
                    <a asp-controller="User" asp-action="ViewUser" asp-route-id="@user.Id">@user.Name</a>
                </td>
                <td>
                    @user.Email
                </td>
            </tr>
        }
    </tbody>
</table>